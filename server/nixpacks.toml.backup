[phases.setup]
nixPkgs = [
    "tesseract",
    "tesseract-data-eng",
    "fontconfig",
    "libGL",
    "mesa",
    "xorg.libX11",
    "xorg.libXext",
    "xorg.libXrender",
    "xorg.libXi",
    "xorg.libXrandr",
    "xorg.libXcursor",
    "xorg.libXinerama",
    "xorg.libXxf86vm",
    "libglvnd",
    "glib",
    "cairo",
    "pango",
    "gdk-pixbuf",
    "gtk+3",
    "poppler",
    "poppler_utils",
    "poppler_data"
]

[phases.install]
cmds = [
    "pip install --upgrade pip",
    "pip install -r requirements.txt"
]

[phases.build]
cmds = [
    "echo 'Build phase completed'",
    "echo 'Verifying system dependencies...'",
    "which tesseract || echo 'Tesseract not found'",
    "which fontconfig || echo 'Fontconfig not found'",
    "ls -la /usr/lib/x86_64-linux-gnu/libGL* || echo 'OpenGL libraries not found'"
]

[start]
cmd = "python main.py"
